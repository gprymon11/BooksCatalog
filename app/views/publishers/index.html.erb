<p style="color: green"><%= notice %></p>

<h1>Publishers</h1>

<div id="publishers">
  <table border="2">
  <thead>
  <tr>
    <th>Name</th>
    <th>Books</th>
    <th colspan="3">Functions</th>
  </tr>
  </thead>
  <tbody>
  <% @publishers.each do |publisher| %>
    <tr>
      <td><%= publisher.name %></td>
      <td>    <% publisher.books.each do |g| %>
          <%= link_to "#{g.title} (#{g.author.name})" , book_path(g) %>
          <br>
        <% end %>
      </td>
      <td><%= link_to 'Show',publisher %></td>
      <td><%= link_to 'Edit',edit_publisher_path(publisher) %></td>
      <td><%= button_to 'Destroy', publisher, method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<h2><%= link_to "New publisher", new_publisher_path %></h2>
<h2><%= link_to "Books", books_path %></h2>
<h2><%= link_to "Categories", categories_path %></h2>
<h2><%= link_to "Authors", authors_path %></h2>

