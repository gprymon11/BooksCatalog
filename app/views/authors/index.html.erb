<p style="color: green"><%= notice %></p>

<h1>Authors</h1>

<div id="authors">
  <table border="2">
    <thead>
    <tr>
      <th>Name</th>
      <th>Year of birth</th>
      <th>Books</th>
      <th colspan="3">Functions</th>
    </tr>
    </thead>
    <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name%></td>
        <td><%= author.dob %></td>
        <td>    <% author.books.each do |g| %>
            <%= link_to "#{g.title} (#{g.category.name})" , book_path(g) %><br>
          <% end %>
        </td>

        <td><%= link_to 'Show',author %></td>
        <td><%= link_to 'Edit',edit_author_path(author) %></td>
        <td><%= button_to 'Destroy', author, method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<h2><%= link_to "New author", new_author_path %></h2>
<h2><%= link_to "Books", books_path %></h2>
<h2><%= link_to "Categories", categories_path %></h2>
<h2><%= link_to "Publishers", publishers_path %></h2>
