<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table border="2">
    <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Author</th>
      <th>Body</th>
      <th>Publishers</th>
      <th colspan="3">Functions</th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= link_to book.category.name, book.category %></td>
        <td><%= link_to book.author.name, book.author %></td>
        <td><%= book.body %></td>
        <td>    <% book.publishers.each do |g| %>
            <%= link_to g.name, publisher_path(g) %> <br>
             <% end %>
        </td>
        <td><%= link_to 'Show',book %></td>
        <td><%= link_to 'Edit',edit_book_path(book) %></td>
        <td><%= button_to 'Destroy', book, method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<h2><%= link_to "New book", new_book_path %></h2>
<h2><%= link_to "Authors", authors_path %></h2>
<h2><%= link_to "Categories", categories_path %></h2>
<h2><%= link_to "Publishers", publishers_path %></h2>
