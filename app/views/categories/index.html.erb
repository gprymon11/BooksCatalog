<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <table border="2">
    <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
      <th colspan="3">Functions</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>    <% category.books.each do |g| %>
            <%= link_to "#{g.title} (#{g.author.name})" , book_path(g) %> <br>
          <% end %>
        </td>
        <td><%= link_to 'Show',category %></td>
        <td><%= link_to 'Edit',edit_category_path(category) %></td>
        <td><%= button_to 'Destroy', category, method: :delete %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<h2><%= link_to "New category", new_category_path %></h2>
<h2><%= link_to "Books", books_path %></h2>
<h2><%= link_to "Authors", authors_path %></h2>
<h2><%= link_to "Publishers", publishers_path %></h2>

